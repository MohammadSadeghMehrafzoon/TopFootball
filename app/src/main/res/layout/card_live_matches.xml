<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/stadium"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/stadium">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTeam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Man United"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/imageViewTeam1"
                app:layout_constraintHorizontal_bias="0.644"
                app:layout_constraintStart_toStartOf="@+id/imageViewTeam1"
                app:layout_constraintTop_toBottomOf="@+id/imageViewTeam1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewTeam1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="44dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewResultTeam1"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default_crest" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewResultTeam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="1"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTeam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="FC Barcelona"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/imageViewTeam2"
                app:layout_constraintStart_toStartOf="@+id/imageViewTeam2"
                app:layout_constraintTop_toBottomOf="@+id/imageViewTeam2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewTeam2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewResultTeam2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default_crest" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewResultTeam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="3"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewNameLeague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="LaLiga"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>